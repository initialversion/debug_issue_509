<div class="page-header">
  <h1>
    App invites
    <a href="/app_invites/new" class="btn btn-lg btn-success">New App invite</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender</th>
        <th>Recipient</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>

      <% @app_invites.each do |app_invite| %>
      <tr>
        <td><%= app_invite.sender_id %></td>
        <td><%= app_invite.recipient_id %></td>
        <td><%= app_invite.status %></td>
        <td>
          <a href="/app_invites/<%= app_invite.id %>" class="btn btn-primary">Show</a>
          <a href="/app_invites/<%= app_invite.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_app_invite/<%= app_invite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
