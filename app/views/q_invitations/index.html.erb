<div class="page-header">
  <h1>
    Q invitations
    <a href="/q_invitations/new" class="btn btn-lg btn-success">New Q invitation</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender</th>
        <th>Recipient</th>
        <th>Status</th>
        <th>Queue</th>
        <th>Actions</th>
      </tr>

      <% @q_invitations.each do |q_invitation| %>
      <tr>
        <td><%= q_invitation.sender.user_id %></td>
        <td><%= q_invitation.recipient.email %></td>
        <td><%= q_invitation.status %></td>
        <td><%= q_invitation.queue_id %></td>
        <td>
          <a href="/q_invitations/<%= q_invitation.id %>" class="btn btn-primary">Show</a>
          <a href="/q_invitations/<%= q_invitation.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_q_invitation/<%= q_invitation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
