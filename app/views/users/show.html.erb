<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Password</dt>
      <dd><%= @user.password %></dd>

      <dt>User points</dt>
      <dd><%= @user.user_points %></dd>

      <dt>Name</dt>
      <dd><%= @user.name %></dd>

      <dt>Profile picture</dt>
      <dd><img src="<%= @user.profile_picture %>" class="img-responsive"></dd>

      <dt>Facebook</dt>
      <dd><%= @user.facebook_id %></dd>

      <dt>Phone no</dt>
      <dd><%= @user.phone_no %></dd>

      <dt>Username</dt>
      <dd><%= @user.username %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>
