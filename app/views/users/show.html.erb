<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Password</dt>
      <dd><%= @user.password %></dd>

      <dt>User points</dt>
      <dd><%= @user.user_points %></dd>

      <dt>Name</dt>
      <dd><%= @user.name %></dd>

      <dt>Profile picture</dt>
      <dd><img src="<%= @user.profile_picture %>" class="img-responsive"></dd>

      <dt>Facebook</dt>
      <dd><%= @user.facebook_id %></dd>

      <dt>Phone no</dt>
      <dd><%= @user.phone_no %></dd>

      <dt>Username</dt>
      <dd><%= @user.username %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A User has many q_participants -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Q_participants
      </li>

      <% @user.q_participants.each do |q_participant| %>
        <li class="list-group-item">
          <a href="/q_participants/<%= q_participant.id %>">
            <%= q_participant.user_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/q_participants/<%= q_participant.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/q_participants/<%= q_participant.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_q_participant/<%= q_participant.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

