<div class="page-header">
  <h1>
    Q lineups
    <a href="/q_lineups/new" class="btn btn-lg btn-success">New Q lineup</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Suggestion or inspiration</th>
        <th>Inspiration</th>
        <th>Suggestion</th>
        <th>Active</th>
        <th>Lineup order</th>
        <th>Q</th>
        <th>Actions</th>
      </tr>

      <% @q_lineups.each do |q_lineup| %>
      <tr>
        <td><%= q_lineup.suggestion_or_inspiration %></td>
        <td>
          <% if q_lineup.inspiration.present? %>
            <a href="/inspirations/<%= q_lineup.inspiration.id %>">
              <%= q_lineup.inspiration.seed_track_id %>
            </a>
          <% end %>
        </td>
        <td><%= q_lineup.suggestion_id %></td>
        <td><%= q_lineup.active %></td>
        <td><%= q_lineup.lineup_order %></td>
        <td>
          <% if q_lineup.q.present? %>
            <a href="/queues/<%= q_lineup.q.id %>">
              <%= q_lineup.q.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/q_lineups/<%= q_lineup.id %>" class="btn btn-primary">Show</a>
          <a href="/q_lineups/<%= q_lineup.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_q_lineup/<%= q_lineup.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @q_lineups, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
